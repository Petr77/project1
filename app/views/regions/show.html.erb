<br>
<div class="admin_button">
  <%= link_to "Delete Region", region_path(@region.id), method: :delete, class: "btn btn-primary" %>
  <%= link_to "Edit Region", edit_region_path(region_id: @region.id), class: "btn btn-primary" %>
  <%= link_to "Add New Variety", new_variety_path(region_id: @region.id), class: "btn btn-primary" %>
</div>

<h2><%= @region.name %></h2>

<p><%= @region.description %></p>

<h2>Varities:</h2>
<ul>
  <% @region.varieties.each do |rv| %>
    <li><%= link_to rv.name, wine_region_varieties_path(@region.id, rv.id) %></li>
  <%end%>
</ul>
