<h1><%= @country.name %></h1>

<%= link_to "Delete Country", country_path(@country.id), method: :delete %>
<br>
<%= link_to "Edit Country", edit_country_path(@country.id) %>
<br>
<%= link_to "Add Region", new_region_path(country_id: @country.id ) %>

<ul>
  <% @country.regions.each do |cr| %>
    <li><%= link_to cr.name, region_path(cr.id) %></li>
  <%end%>
</ul>
