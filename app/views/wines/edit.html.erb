<%= form_for @wine, :html => {:multipart => true}  do |w|%>
  <p>
    <%= w.label :name %>
    <%= w.text_field :name %>
  </p>
  <p>
    <%= w.label "Image " %>
    <%= w.cl_image_upload :image %>
  </p>

  <p>
    <%= w.label :description %>
    <%= w.text_field :description %>
  </p>
  
  <p>
    <%= w.submit "Save" %>
  </p>
<%end%>
